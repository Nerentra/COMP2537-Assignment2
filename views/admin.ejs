<%- include("templates/header", { title: "Admin", user }) %>
<p class="mt-3 fs-3"><b>Admin</b></p>
  <form method="POST">
    <div class="list-group">
      <% for (let i = 0; i < users.length; i++) { %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <% if (user && user.email === users[i].email) { %>
            <span><%- include("templates/user", {user: users[i], includeButton: false}) %></span>
          <% } else { %>
            <span><%- include("templates/user", {user: users[i], includeButton: true}) %></span>
          <% } %>
        </div>
      <% } %>
    </div>
  </form>
<%- include("templates/footer") %>
